{
  "name": "扇贝助手v2",
  "version": "1.0.5",
  "author": "maicss, jinntrance",
  "manifest_version": 2,
  "description": "基于shanbay API的网页查询并加入单词到生词本的应用。并添加了GitHub首页头像和trend功能",
  "icons": {
    "48": "images/icon_48.png"
  },
  "background": {
    "scripts": [
      "js/const.js",
      "js/shanbay_oauth2.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "images/icon_48.png",
    "default_popup": "popup.html",
    "default_title": "扇贝助手v2"
  },
  "minimum_chrome_version": "54",
  "content_scripts": [
    {
      "css": [
        "css/popup.css"
      ],
      "js": [
        "js/const.js",
        "js/main.js"
      ],
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "*://*.shanbay.com/*", 
        "*://*.hjenglish.com/*", 
        "*://*.codepen.io/*",
        "*://*.jsfiddle.net/*",
        "*://*.jsbin.com/*"
      ]
    },
    {
      "js": [
        "js/const.js",
        "js/github-avatar.js"
      ],
      "matches": ["https://github.com/"]
    }
  ],
  "permissions": [
    "cookies",
    "contextMenus",
    "tabs",
    "storage",
    "notifications",
    "*://*/*"
  ]
}