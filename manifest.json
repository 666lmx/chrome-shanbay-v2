{
  "name": "扇贝助手v2",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "基于shanbay的网页查询并加入生词本应用",
  "icons": {
    "48": "images/icon_48.png"
  },
  "background": {
    "scripts": [
      "js/const.js",
      "js/shanbay_oauth2.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "images/icon_48.png",
    "default_popup": "popup.html",
    "default_title": "扇贝助手v2"
  },
  "content_scripts": [
    {
      "css": [
        "css/popup.css"
      ],
      "js": [
        "js/const.js",
        "js/main.js"
      ],
      "matches": ["<all_urls>"],
      "exclude_matches": ["*://*.shanbay.com/*", "*://*.hjenglish.com/*"]
    }
  ],
  "permissions": [
    "cookies",
    "contextMenus",
    "tabs",
    "storage",
    "notifications",
    "*://*/*"
  ]
}