{
  "name": "扇贝助手v2",
  "version": "2.1.7",
  "author": "maicss maicss@foxmail.com https://github.com/maicss",
  "manifest_version": 3,
  "description": "基于shanbay网页API查询并加入单词到生词本的应用",
  "icons": {
    "48": "images/icon_48.png"
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "action": {
    "default_icon": "images/icon_48.png",
    "default_popup": "popup.html",
    "default_title": "扇贝助手v2"
  },
  "minimum_chrome_version": "88",
  "web_accessible_resources": [{
    "matches": ["<all_urls>"],
    "resources": ["js/const.mjs"]
  }],
  "content_scripts": [
    {
      "css": [
        "css/popover.css"
      ],
      "js": [
        "js/main.mjs"
      ],
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "*://*.shanbay.com/*", 
        "*://*.hjenglish.com/*", 
        "*://*.codepen.io/*",
        "*://*.jsfiddle.net/*",
        "*://*.jsbin.com/*",
        "*://*.codesandbox.io/*",
        "*://*.github1s.com/*"
      ]
    }
  ],
  "host_permissions": [
    "*://*.shanbay.com/"
  ],
  "permissions": [
    "cookies",
    "contextMenus",
    "tabs",
    "storage",
    "alarms",
    "notifications",
    "offscreen"
  ]
}